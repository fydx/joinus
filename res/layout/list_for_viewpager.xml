<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F0F0F0"
    android:gravity="center_vertical|center">

 <RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center_vertical|center_horizontal|center"
     android:gravity="center_vertical|center"
   >

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="230dip"
         android:layout_height="110dip"
         android:src="@drawable/sssta" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/imageView1"
         android:layout_centerHorizontal="true"
         android:text="name"
         android:textColor="#000000"
         android:textSize="28dip" />

     <TextView
         android:id="@+id/time_large2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView1"
         android:layout_centerHorizontal="true"
         android:text="time"
          android:paddingTop ="5dip"
         android:textColor="#000000"
         android:textSize="21dip" />

     <ImageView
         android:id="@+id/place2"
         android:layout_width="35dip"
         android:layout_height="35dip"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/time_large2"
         android:layout_marginTop="24dp"
         android:src="@drawable/place" />

     <TextView
         android:id="@+id/place_large2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/place2"
         android:layout_centerHorizontal="true"
         android:text="place"
         android:textColor="#000000"
         android:textSize="25dip" />

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="30dip"
         android:layout_height="30dip"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/place2"
         android:layout_marginTop="40dp"
         android:src="@drawable/shetuan" />

     <TextView
         android:id="@+id/shetuan_large3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/imageView3"
         android:layout_centerHorizontal="true"
         android:text="shetuan"
         android:textColor="#000000"
         android:textSize="25dip" />

     <ImageView
         android:id="@+id/imageView2"
         android:layout_width="35dip"
         android:layout_height="35dip"
         android:layout_above="@+id/place2"
         android:layout_alignParentLeft="true"
         android:paddingTop="5dip"
         android:src="@drawable/time" />

 </RelativeLayout>

 </LinearLayout>