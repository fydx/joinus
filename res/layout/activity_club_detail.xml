<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/shetuanxinxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clubinfo" />

    <TextView
        android:id="@+id/社团名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="社团名称（不可更改）"
        android:textColor="#000000"
        android:textSize="25dip" />

    <TextView
        android:id="@+id/name_clubdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="社团名称"
        android:textColor="#000000"
        android:textSize="25dip" />

    <TextView
        android:id="@+id/detail_for_clubdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:text="社团简介"
        android:textColor="#000000"
        android:textSize="25dip" />

    <EditText
        android:id="@+id/editText_detail"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:ems="10" 
        android:gravity="top">

    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom" >

        <Button
            android:id="@+id/submit_club"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_submit"
            android:text="  " />
    </LinearLayout>

</LinearLayout>