<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default1" />

    <TextView
        android:id="@+id/Activity_name_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="30dip" />

    <TextView
        android:id="@+id/Activity_shetuan_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Activity_name_small"
        android:layout_below="@+id/Activity_name_small"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/Activity_time_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/Activity_shetuan_small"
        android:layout_below="@+id/Activity_shetuan_small"
        android:text="TextView"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/Activity_place_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/Activity_time_small"
        android:layout_below="@+id/Activity_time_small"
        android:text="TextView"
        android:textSize="20dip" />

</RelativeLayout>